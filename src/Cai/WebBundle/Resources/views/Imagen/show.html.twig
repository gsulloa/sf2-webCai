{% extends 'CaiWebBundle::base.html.twig' %}

{% block body -%}
    <h1>Imagen</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ entity.filename }}</td>
            </tr>
            <tr>
                <th>Small</th>
                <td>
                    <img src="{{ asset('uploads/biblioteca/imagenes/') }}{{ entity.filenamebinary }}/small-{{ entity.filename }}">
                </td>
            </tr>
            <tr>
                <th>Medium</th>
                <td>
                    <img src="{{ asset('uploads/biblioteca/imagenes/') }}{{ entity.filenamebinary }}/medium-{{ entity.filename }}">
                </td>
            </tr>
            <tr>
                <th>Original</th>
                <td>
                    <img src="{{ asset('uploads/biblioteca/imagenes/') }}{{ entity.filenamebinary }}/{{ entity.filename }}">
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('imagen') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('imagen_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
